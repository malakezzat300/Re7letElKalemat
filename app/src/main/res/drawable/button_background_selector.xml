<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" android:color="@color/gray">
        <shape android:shape="rectangle">
            <solid android:color="@color/green"/>
        </shape>
    </item>
    <item android:state_checked="true" android:color="@color/darkGray">
        <shape android:shape="rectangle">
            <solid android:color="@color/black"/>
        </shape>
    </item>
    <item android:state_enabled="false" android:color="@color/green">
        <shape android:shape="rectangle">
            <solid android:color="@color/white"/>
        </shape>
    </item>
    <item android:color="@color/black">
        <shape android:shape="rectangle">
            <solid android:color="@color/my_on_secondary_color"/>
        </shape>
    </item>
</selector>
