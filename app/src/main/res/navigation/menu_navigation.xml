<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/menu_navigation"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.malakezzat.re7letelkalemat.View.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home">
        <action
            android:id="@+id/action_homeFragment_to_settingsFragment"
            app:destination="@id/settingsFragment"
            app:enterAnim="@anim/fragment_slide_in_right"
            app:exitAnim="@anim/fragment_slide_out_left"
            app:popEnterAnim="@anim/fragment_slide_in_right"
            app:popExitAnim="@anim/fragment_slide_out_left"/>
    </fragment>

    <fragment
        android:id="@+id/settingsFragment"
        android:name="com.malakezzat.re7letelkalemat.View.SettingsFragment"
        android:label="SettingsFragment">
        <action
            android:id="@+id/action_settingsFragment_to_homeFragment"
            app:destination="@id/homeFragment"
            app:enterAnim="@anim/fragment_slide_in_right"
            app:exitAnim="@anim/fragment_slide_out_left"
            app:popEnterAnim="@anim/fragment_slide_in_right"
            app:popExitAnim="@anim/fragment_slide_out_left"/>
    </fragment>

    <fragment
        android:id="@+id/profileFragment2"
        android:name="com.malakezzat.re7letelkalemat.View.ProfileFragment"
        android:label="fragment_profile"
        tools:layout="@layout/fragment_profile">
        <action
            android:id="@+id/action_profileFragment2_to_homeFragment"
            app:destination="@id/homeFragment"
            app:enterAnim="@anim/fragment_slide_in_right"
            app:exitAnim="@anim/fragment_slide_out_left"
            app:popEnterAnim="@anim/fragment_slide_in_right"
            app:popExitAnim="@anim/fragment_slide_out_left"/>
    </fragment>

    <fragment
        android:id="@+id/myCardFragment"
        android:name="com.malakezzat.re7letelkalemat.View.MyCardFragment"
        android:label="MyCardFragment">
        <action
            android:id="@+id/action_myCardFragment_to_homeFragment"
            app:destination="@id/homeFragment"
            app:enterAnim="@anim/fragment_slide_in_right"
            app:exitAnim="@anim/fragment_slide_out_left"
            app:popEnterAnim="@anim/fragment_slide_in_right"
            app:popExitAnim="@anim/fragment_slide_out_left"/>
    </fragment>
</navigation>
