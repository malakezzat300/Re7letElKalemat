<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".View.AfterSuccessInGame">
    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/congratesAnimation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:lottie_rawRes="@raw/after_game"
        />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/congratesAnimation"

            >
            <TextView
                android:id="@+id/personName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="احمد"
                android:textSize="40sp"
                style="@style/GeneralText"
                />
            <TextView
                android:id="@+id/congrate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/congrates"
                style="@style/GeneralText"
                android:textSize="40sp"
                android:layout_marginStart="10dp"
                />
        </LinearLayout>





</androidx.constraintlayout.widget.ConstraintLayout>