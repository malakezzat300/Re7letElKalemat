<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background"
        tools:context=".View.EditProfileActivity">


        <ImageView
            android:id="@+id/backImage"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginStart="32dp"
            android:layout_marginTop="32dp"
            android:layout_marginBottom="32dp"
            android:src="@drawable/back"
            app:layout_constraintBottom_toTopOf="@+id/view"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <View
            android:id="@+id/view"
            android:layout_width="0dp"
            android:layout_height="550dp"
            android:layout_marginTop="32dp"
            android:background="@drawable/rounded_corners"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/backImage" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profileImg"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="24dp"
            android:src="@drawable/vector__1_"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/view" />

        <Button
            android:id="@+id/changePicButton"
            style="@style/GeneralButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/choose_image"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/profileImg"
            android:visibility="gone"/>

        <ImageView
            android:id="@+id/girl1_button"
            android:layout_width="73dp"
            android:layout_height="71dp"
            android:layout_marginTop="16dp"
            app:layout_constraintEnd_toStartOf="@+id/girl2_button"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/changePicButton"
            app:srcCompat="@drawable/while_filled_circle" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/girl1_image"
            android:layout_width="73dp"
            android:layout_height="71dp"
            android:layout_marginTop="8dp"
            android:padding="4dp"
            app:layout_constraintEnd_toEndOf="@+id/girl1_button"
            app:layout_constraintBottom_toBottomOf="@+id/girl1_button"
            app:layout_constraintStart_toStartOf="@+id/girl1_button"
            app:layout_constraintTop_toTopOf="@+id/girl1_button"
            android:src="@drawable/girl1" />


        <ImageView
            android:id="@+id/girl2_button"
            android:layout_width="73dp"
            android:layout_height="71dp"
            android:layout_marginTop="16dp"
            app:layout_constraintEnd_toStartOf="@+id/boy1_button"
            app:layout_constraintStart_toEndOf="@+id/girl1_button"
            app:layout_constraintTop_toBottomOf="@+id/changePicButton"
            app:srcCompat="@drawable/while_filled_circle" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/girl2_image"
            android:layout_width="73dp"
            android:layout_height="71dp"
            android:layout_marginTop="8dp"
            android:padding="4dp"
            app:layout_constraintEnd_toEndOf="@+id/girl2_button"
            app:layout_constraintBottom_toBottomOf="@+id/girl2_button"
            app:layout_constraintStart_toStartOf="@+id/girl2_button"
            app:layout_constraintTop_toTopOf="@+id/girl2_button"
            android:src="@drawable/girl2" />

        <ImageView
            android:id="@+id/boy1_button"
            android:layout_width="73dp"
            android:layout_height="71dp"
            android:layout_marginTop="16dp"
            app:layout_constraintEnd_toStartOf="@+id/boy2_button"
            app:layout_constraintStart_toEndOf="@+id/girl2_button"
            app:layout_constraintTop_toBottomOf="@+id/changePicButton"
            app:srcCompat="@drawable/while_filled_circle" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/boy1_image"
            android:layout_width="73dp"
            android:layout_height="71dp"
            android:layout_marginTop="8dp"
            android:padding="4dp"
            app:layout_constraintEnd_toEndOf="@+id/boy1_button"
            app:layout_constraintBottom_toBottomOf="@+id/boy1_button"
            app:layout_constraintStart_toStartOf="@+id/boy1_button"
            app:layout_constraintTop_toTopOf="@+id/boy1_button"
            android:src="@drawable/boy1" />

        <ImageView
            android:id="@+id/boy2_button"
            android:layout_width="73dp"
            android:layout_height="71dp"
            android:layout_marginTop="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/boy1_button"
            app:layout_constraintTop_toBottomOf="@+id/changePicButton"
            app:srcCompat="@drawable/while_filled_circle" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/boy2_image"
            android:layout_width="73dp"
            android:layout_height="71dp"
            android:layout_marginTop="8dp"
            android:padding="4dp"
            app:layout_constraintEnd_toEndOf="@+id/boy2_button"
            app:layout_constraintBottom_toBottomOf="@+id/boy2_button"
            app:layout_constraintStart_toStartOf="@+id/boy2_button"
            app:layout_constraintTop_toTopOf="@+id/boy2_button"
            android:src="@drawable/boy2" />

        <com.google.android.material.divider.MaterialDivider
            android:id="@+id/divider"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="32dp"
            android:layout_marginTop="32dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/girl2_button" />

        <EditText
            android:id="@+id/usernameChangeEditText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginTop="48dp"
            android:layout_marginEnd="32dp"
            android:background="@drawable/rectangle"
            android:drawableEnd="@drawable/user"
            android:drawablePadding="20dp"
            android:fontFamily="@font/app"
            android:hint="@string/new_name"
            android:textColorHint="#373737"
            android:textColor="#373737"
            android:inputType="text"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/divider" />


        <Button
            android:id="@+id/changeNameButton"
            style="@style/GeneralButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="@string/change_name"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/usernameChangeEditText" />

        <TextView
            android:id="@+id/scoreText"
            android:layout_width="91dp"
            android:layout_height="50dp"
            android:layout_marginTop="32dp"
            android:text="TextView"
            android:textSize="20sp"
            app:layout_constraintEnd_toStartOf="@+id/profileImg"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/view" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
